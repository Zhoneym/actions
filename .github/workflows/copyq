name: Build ARM64 Python with xlwings (Alpine)

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v4

    - name: Enable QEMU for ARM64
      run: |
        sudo docker run --rm --privileged multiarch/qemu-user-static --reset -p yes

    - name: Build Python + xlwings in Alpine ARM64
      run: |
        docker run --rm --platform linux/arm64 \
          -v $PWD:/workspace \
          -w /workspace \
          alpine:3.19 sh -c "
            # 安装 python3、pip 和 bash
            apk add --no-cache python3 py3-pip bash \
            # 升级 pip
            && pip3 install --upgrade pip \
            # 安装 xlwings
            && pip3 install xlwings \
            # 打包 Python 环境
            && tar czf /workspace/python-arm64-xlwings.tar.gz \
               /usr/bin/python3 \
               /usr/lib/python3* \
               /usr/lib/lib* \
               /usr/bin/pip3
          "

    - name: Upload artifact
      uses: actions/upload-artifact@v4
      with:
        name: python-arm64-xlwings
        path: python-arm64-xlwings.tar.gz

